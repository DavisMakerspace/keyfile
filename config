# List of registered usb keys
KEYS=/etc/sentry-usbkey/keys

# Log dir
LOGDIR=/var/log/sentry-usbkey

# Requests dir
REQDIR=/var/lib/sentry-usbkey/requests

# SSL private key for usbkey sentry client
PRIVKEY=/etc/sentry-usbkey/privkey.pem

# SSL certificate for usbkey sentry client
CERT=/etc/sentry-usbkey/cert.pem

# SSL certificate for sentry server
SENTRY_CERT=/etc/sentry-usbkey/sentry-cert.pem

# Hostname where sentry server is running
SENTRY_HOST=host.domain.tld

# Port on which sentry server is running
SENTRY_PORT=1234
